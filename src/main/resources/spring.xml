<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Constructor injection -->
    <bean id="triangle"
          class="com.example.jbrainspringdemo.Triangle" >
        <constructor-arg name="type" type="java.lang.String" value="Equilateral" />
        <constructor-arg name="height" type="int" value="20" />
    </bean>

    <!-- Setter injection -->
    <bean id="circle"
          class="com.example.jbrainspringdemo.Circle">
        <property name="radius" value="20" />
    </bean>

    <!-- object injection -->
    <!-- in case the objects (Points) are going to be injected only to other objects (square,triangle,circle etc)
    throughout the program-->
    <bean id="polygon"
          class="com.example.jbrainspringdemo.Polygon" >
        <property name="center" ref="center" />
        <property name="downCenter" ref="centerDown"/>
        <property name="upCenter" ref="centerUp"/>
    </bean>
    <bean id="center" class="com.example.jbrainspringdemo.Point">
        <property name="x" value="20"/>
        <property name="y" value="20"/>
    </bean>
    <bean id="centerUp" class="com.example.jbrainspringdemo.Point">
        <property name="x" value="20"/>
        <property name="y" value="40"/>
    </bean>
    <bean id="centerDown" class="com.example.jbrainspringdemo.Point">
        <property name="x" value="20"/>
        <property name="y" value="0"/>
    </bean>

    <!-- object injection with inner beans-->
    <!-- in case the objects (Points) are going to be injected only to the specific object (square) -->
    <bean id="square"
          class="com.example.jbrainspringdemo.Square">
        <property name="a" >
            <bean class="com.example.jbrainspringdemo.Point">
                <property name="x" value="2"/>
                <property name="y" value="2"/>
            </bean>
        </property>
        <property name="b">
            <bean class="com.example.jbrainspringdemo.Point">
                <property name="x" value="4"/>
                <property name="y" value="2"/>
            </bean>
        </property>
        <property name="c">
            <bean class="com.example.jbrainspringdemo.Point">
                <property name="x" value="4"/>
                <property name="y" value="0"/>
            </bean>
        </property>
        <property name="d">
            <bean class="com.example.jbrainspringdemo.Point">
                <property name="x" value="2"/>
                <property name="y" value="0"/>
            </bean>
        </property>
    </bean>

    <!-- object injection with a list as property -->
    <bean id="rectangle"
          class="com.example.jbrainspringdemo.Rectangle">
        <property name="list">
            <list>
                <ref bean="rectanglePointA"/>
                <ref bean="rectanglePointB"/>
                <ref bean="rectanglePointC"/>
                <ref bean="rectanglePointD"/>
            </list>
        </property>
    </bean>
    <bean id="rectanglePointA" class="com.example.jbrainspringdemo.Point">
        <property name="x" value="2"/>
        <property name="y" value="4"/>
    </bean>
    <bean id="rectanglePointB" class="com.example.jbrainspringdemo.Point">
        <property name="x" value="2"/>
        <property name="y" value="8"/>
    </bean>
    <bean id="rectanglePointC" class="com.example.jbrainspringdemo.Point">
        <property name="x" value="8"/>
        <property name="y" value="8"/>
    </bean>
    <bean id="rectanglePointD" class="com.example.jbrainspringdemo.Point">
        <property name="x" value="8"/>
        <property name="y" value="4"/>
    </bean>
</beans>
